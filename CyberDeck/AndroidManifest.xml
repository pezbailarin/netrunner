<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.ck.cyberdeck"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:name="it.ck.cyberdeck.presentation.CyberDeckApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="it.ck.cyberdeck.CardListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="it.ck.cyberdeck.CardDetailActivity"
            android:label="@string/title_card_detail"
            android:parentActivityName="it.ck.cyberdeck.CardListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CardListActivity" />
        </activity>
        <activity
            android:name="it.ck.cyberdeck.presentation.DeckActivity"
            android:label="@string/title_activity_deck" >
        </activity>
        <activity
            android:name="it.ck.cyberdeck.presentation.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.ck.cyberdeck.presentation.NewDeckWizard"
            android:label="@string/title_activity_new_deck_wizard"
            android:noHistory="true" >
        </activity>
        <activity android:name="it.ck.cyberdeck.presentation.AddCardActivity" >
        </activity>
        <activity
            android:name="it.ck.cyberdeck.presentation.DeckListActivity"
            android:label="@string/title_activity_deck_list" >
        </activity>
        <activity
            android:name="it.ck.cyberdeck.presentation.CardGalleryActivity"
            android:label="@string/title_activity_card_gallery" >
        </activity>
        <activity
            android:name="it.ck.cyberdeck.presentation.DeckDetailActivity"
            android:label="@string/title_activity_deck_detail" >
        </activity>
        <activity
            android:name="it.ck.cyberdeck.presentation.DeckGridViewActivity"
            android:label="@string/title_activity_deck_grid_view" >
        </activity>
    </application>

</manifest>
